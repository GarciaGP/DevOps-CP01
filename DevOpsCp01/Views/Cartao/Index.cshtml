@model Cartao

@{
    ViewData["Title"] = "Index";
}

<h1>Cadastro de Cartão</h1>

<form asp-action="cadastrar" method="post">
    <div class="form-group">
        <label asp-for="Numero"></label>
        <input asp-for="Numero" class="form-control" maxlength="16" />
    </div>
    <div class="form-group">
        <label asp-for="Descricao"></label>
        <input asp-for="Descricao" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cvv"></label>
        <input asp-for="Cvv" class="form-control" maxlength="3" />
    </div>
    <div class="form-group">
        <label asp-for="Limite"></label>
        <input asp-for="Limite" class="form-control" maxlength="3" />
    </div>
    <div class="form-group">
        <label asp-for="IdCliente"></label>
        <select asp-for="IdCliente" class="form-control" asp-items="@ViewBag.clientes">
            <option>Selecione</option>
        </select>
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-outline-primary" />
</form>

