@model Cartao

@{
    ViewData["Title"] = "Index";
}

<h1>Cadastro de Cartão</h1>

@if (TempData["mensagem"] != null)
{
    <div class="alert alert-success">
        @TempData["mensagem"]
    </div>
}

@{
    var edicao = false;
    if (ViewBag.edicao != null && ViewBag.edicao)
    {
        edicao = ViewBag.edicao;
    }
}

<form>
    <div class="form-group">
        <label asp-for="Numero"></label>
        <input asp-for="Numero" class="form-control" maxlength="16" disabled="@edicao" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="Descricao"></label>
        <input asp-for="Descricao" class="form-control" disabled="@edicao" />
    </div>
    <div class="form-group">
        <label asp-for="Cvv"></label>
        <input asp-for="Cvv" class="form-control" maxlength="3" disabled="@edicao" pattern="([0-9]{3})" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="Limite"></label>
        <input asp-for="Limite" class="form-control" maxlength="4" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="IdCliente"></label>
        <select asp-for="IdCliente" class="form-control" asp-items="@ViewBag.clientes" disabled="@edicao">
            <option>Selecione</option>
        </select>
    </div>
    @if (edicao != null && edicao)
    {
        <input type="submit" value="Editar" class="btn btn-outline-primary" action="Editar" formmethod="put" formaction="editar" />
    }
    else
    {
        <input type="submit" value="Cadastrar" class="btn btn-outline-primary" action="cadastrar" formmethod="post" formaction="cadastrar"/>
    }
</form>

