@model Cliente

@{
    ViewData["Title"] = "Index";
}

<h1>Cadastro de Cliente</h1>

@if (TempData["mensagem"] != null)
{
    <div class="alert alert-success">
        @TempData["mensagem"];
    </div>
}

<form asp-action="cadastrar" method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cpf"></label>
        <input asp-for="Cpf" class="form-control" maxlength="11" pattern="([0-9]{11})" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="Endereco"></label>
        <input asp-for="Endereco" class="form-control" />
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-outline-primary" />
</form>

